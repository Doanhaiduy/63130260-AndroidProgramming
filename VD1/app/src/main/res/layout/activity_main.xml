<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center|top">


    <Button
        android:id="@+id/nutSO1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant40"
        android:text="NÚT SỐ 1"
        android:textColor="#FFC107"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/nutSO2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant40"
        android:text="NÚT SỐ 2"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/nutSO3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@color/material_dynamic_neutral_variant40"
        android:text="NÚT SỐ 3"
        android:textColor="#FFFC34"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

</LinearLayout>